<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
			<TextBlock Classes="input_text">
				Add
			</TextBlock>
        </Border>
    </Design.PreviewWith>

	<Style Selector="TextBlock.input_text">
		<Setter Property="FontSize" Value="19"/>
		<Setter Property="FontFamily" Value="Segoe Print"/>
		<Setter Property="FontWeight" Value="900"/>
	    <Setter Property="Foreground" Value="White"/>
		<Setter Property="VerticalAlignment" Value="Bottom"/>
	</Style>
	<Style Selector="TextBox.input_box">
		<Setter Property="FontSize" Value="16"/>
		<Setter Property="Margin" Value="0 10 0 0"/>
	</Style>
	<Style Selector="Button.input_button">
		<Setter Property="FontSize" Value="22"/>
		<Setter Property="FontWeight" Value="550"/>
		<Setter Property="FontFamily" Value="Segoe Print"/>
		<Setter Property="Foreground" Value="WhiteSmoke"/>
		<Setter Property="Cursor" Value="Hand"/>

	</Style>

	<Style Selector="Button:pointerover /template/ ContentPresenter#PART_ContentPresenter">
		<Setter Property="Button.Foreground" Value="Red" />
		<Setter Property="Button.FontSize" Value="22"/>
		<Setter Property="Button.FontWeight" Value="550"/>

	</Style>


